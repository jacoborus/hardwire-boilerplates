brandColor = #f47216


section#dashboard

	.caja
		padding 28px
		margin-bottom 42px
		border-radius 10px
		float left
		width 100%
		-webkit-box-shadow inset 0 0 0 0 #ccc, 0 2px 2px #ddd
		box-shadow inset 0 0 0 0 #ccc, 0 2px 2px #ddd
		transition all 0.25s
		background #fefefe
	.caja img
		max-width 100%
	.caja:hover
		-webkit-box-shadow inset 0 0 10px 2px #eee
		box-shadow inset 0 0 10px 2px #eee
		background #fcfcfc


img[submitter]
	//background url('/img/plusses.png')
	min-width 60px
	min-height 3em
	cursor pointer
	transition all 1s
img[submitter]:hover
	background-color brandColor
form img[submitter]:not([src])
	background-image url('/img/plusses.png')
	background-color #fff
form img[submitter]:not([src]):hover
	background-image url('/img/plusses.png')
	background-color brandColor

body #layout
	paffing-left 170px
.topfix
	position fixed
	background #eee
	width 100%
	padding-right 20px
	height 4em
	z-index 999
	top 0

.topfix input, .topfix a
	position fixed
	right 0.7em
	top 0.7em
	z-index 999

.h-pad
	padding 0 6px
.v-pad
	padding 6px 0

.pad
	padding 6px

// button sizes
.pure-button.button-xsmall
	font-size 70%

.pure-button.button-small
	font-size 85%

.pure-button.button-large
	font-size 110%

.pure-button.button-xlarge
	font-size 125%
 .button-success,.button-error,.button-warning,.button-secondary
	color white
	border-radius 4px
	text-shadow 0 1px 1px rgba(0, 0, 0, 0.2)

.button-success
	background rgb(28, 184, 65) /* this is a green */

.button-error
	background rgb(202, 60, 60) /* this is a maroon */

.button-warning
	background rgb(223, 117, 20) /* this is an orange */

.button-secondary
	background rgb(66, 184, 221) /* this is a light blue */